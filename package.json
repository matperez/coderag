{
	"name": "coderag",
	"version": "0.0.0",
	"private": true,
	"description": "Lightning-fast hybrid code search (TF-IDF + Vector) - RAG-ready for AI assistants",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"test": "turbo run test",
		"clean": "turbo run clean",
		"type-check": "turbo run type-check",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"docs:dev": "cd docs && bun run docs:dev",
		"docs:build": "cd docs && bun run docs:build",
		"docs:preview": "cd docs && bun run docs:preview",
		"changeset": "changeset",
		"version": "changeset version",
		"release": "turbo run build && changeset publish",
		"typecheck": "turbo typecheck",
		"prepublishOnly": "bunx @sylphx/doctor prepublish"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@sylphx/biome-config": "^0.1.0",
		"@sylphx/bump": "^0.6.2",
		"@sylphx/doctor": "^1.21.4",
		"lefthook": "^2.0.4",
		"turbo": "^2.6.0",
		"typescript": "^5.9.3",
		"vitepress": "^1.6.4",
		"vue": "^3.5.25"
	},
	"packageManager": "bun@1.3.2",
	"engines": {
		"node": ">=18.0.0"
	},
	"keywords": [
		"rag",
		"code-search",
		"retrieval-augmented-generation",
		"vector-search",
		"embeddings",
		"tfidf",
		"hybrid-search",
		"mcp",
		"model-context-protocol",
		"codebase-indexing"
	],
	"author": "SylphxAI",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/SylphxAI/coderag.git"
	},
	"type": "module"
}
