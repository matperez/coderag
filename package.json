{
	"name": "coderag",
	"version": "0.0.0",
	"private": true,
	"description": "Semantic code search with vector embeddings - RAG-ready for AI assistants",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build",
		"full-build": "bun install && turbo run build && turbo run test",
		"coderag": "node packages/mcp-server/dist/index.js",
		"publish:core": "cd packages/core && npm publish --access public",
		"publish:mcp": "cd packages/mcp-server && npm publish --access public",
		"publish:all": "bun run build && bun run publish:core && bun run publish:mcp",
		"dev": "turbo run dev",
		"test": "turbo run test",
		"clean": "turbo run clean",
		"type-check": "turbo run type-check",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"docs:dev": "cd docs && bun run docs:dev",
		"docs:build": "cd docs && bun run docs:build",
		"docs:preview": "cd docs && bun run docs:preview",
		"changeset": "changeset",
		"version": "changeset version",
		"release": "turbo run build && changeset publish",
		"typecheck": "turbo typecheck",
		"prepublishOnly": "bunx @sylphx/doctor prepublish"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@sylphx/biome-config": "^0.4.0",
		"@sylphx/bump": "^1.1.1",
		"@sylphx/doctor": "^1.23.3",
		"lefthook": "^2.0.4",
		"turbo": "^2.6.1",
		"typescript": "^5.9.3",
		"vitepress": "^1.6.4",
		"vue": "^3.5.25"
	},
	"packageManager": "bun@1.3.2",
	"engines": {
		"node": ">=18.0.0"
	},
	"keywords": [
		"rag",
		"code-search",
		"retrieval-augmented-generation",
		"vector-search",
		"embeddings",
		"tfidf",
		"semantic-search",
		"mcp",
		"model-context-protocol",
		"codebase-indexing"
	],
	"author": "SylphxAI",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/matperez/coderag.git"
	},
	"type": "module"
}
