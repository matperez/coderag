{
  "name": "@sylphx/codebase-search",
  "version": "1.0.0",
  "description": "Core library for intelligent codebase search using TF-IDF",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./indexer": {
      "types": "./dist/indexer.d.ts",
      "import": "./dist/indexer.js"
    },
    "./tfidf": {
      "types": "./dist/tfidf.d.ts",
      "import": "./dist/tfidf.js"
    },
    "./storage": {
      "types": "./dist/storage.d.ts",
      "import": "./dist/storage.js"
    },
    "./utils": {
      "types": "./dist/utils.d.ts",
      "import": "./dist/utils.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "better-sqlite3": "^11.8.1",
    "chokidar": "^4.0.3",
    "drizzle-orm": "^0.36.4",
    "ignore": "^7.0.5"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^24.9.2",
    "drizzle-kit": "^0.28.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.6"
  },
  "keywords": [
    "codebase-search",
    "tfidf",
    "search",
    "indexing",
    "code-analysis"
  ],
  "author": "SylphxAI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SylphxAI/codebase-search.git",
    "directory": "packages/core"
  }
}
