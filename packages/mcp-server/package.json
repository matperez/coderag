{
	"name": "@sylphx/coderag-mcp",
	"version": "0.3.31",
	"description": "MCP server for CodeRAG - Model Context Protocol integration for RAG",
	"type": "module",
	"main": "./dist/index.js",
	"bin": {
		"coderag-mcp": "./dist/index.js"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"build": "tsc",
		"dev": "bun run src/index.ts",
		"start": "node dist/index.js",
		"test": "bun test",
		"type-check": "tsc --noEmit",
		"clean": "rm -rf dist"
	},
	"dependencies": {
		"@sylphx/coderag": "workspace:*",
		"@sylphx/mcp-server-sdk": "^2.1.0",
		"@sylphx/vex": "^0.1.11"
	},
	"devDependencies": {
		"@types/bun": "^1.3.3",
		"@types/node": "^24.9.2",
		"typescript": "^5.9.3"
	},
	"keywords": [
		"mcp",
		"model-context-protocol",
		"rag",
		"retrieval-augmented-generation",
		"code-search",
		"ai-assistant",
		"coderag"
	],
	"author": "SylphxAI",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/SylphxAI/coderag.git",
		"directory": "packages/mcp-server"
	}
}
